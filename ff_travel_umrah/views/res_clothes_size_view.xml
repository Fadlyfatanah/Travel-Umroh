<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="res_clothes_size_tree">
            <field name="name">res.clothes.size.tree</field>
            <field name="model">res.clothes.size</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_res_clothes_size">
            <field name="name">Clothes Size</field>
            <field name="res_model">res.clothes.size</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>