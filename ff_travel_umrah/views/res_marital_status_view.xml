<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="res_marital_status_tree">
            <field name="name">res.marital.status.tree</field>
            <field name="model">res.marital.status</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_res_marital_status">
            <field name="name">Marital Status</field>
            <field name="res_model">res.marital.status</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>