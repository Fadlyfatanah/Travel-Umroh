    <template id="pendaftaran_data_diri" name="Data-Diri">
        <t t-call="website.layout">
            <div id="wrap" class="container">
                <div id="pendaftaran_data_diri">
                    <section class="s_website_form">
                        <div class="container col-md-8">
                            <form id="pendaftaran_jamaah_form" action="/pendaftaran/data-tambahan" method="post" class="o_mark_required" enctype="multipart/form-data" data-model_name="res.partner" data-success-mode="redirect">
                                <div class="s_website_form_rows row s_col_no_bgcolor" string="Personal Data">
                                    <div class="form-group col-12 s_website_form_field s_website_form_required s_website_form_model_required" data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="recruitment1">
                                                <span class="s_website_form_label_content">Name</span>
                                                <span class="s_website_form_mark"> *</span>
                                            </label>
                                            <div class="col-sm">
                                                <input id="recruitment1" type="text" class="form-control s_website_form_input" name="name" required=""/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row" >
                                    <div class="form-group col-md-6">
                                        <label for="name">Nama </label>
                                        <input id="name" type="text" class="form-control" name="name" required=""/>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="ktp_no">No. KTP </label>
                                        <input id="ktp_no" type="text" class="form-control" name="ktp_no" required=""/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="mobile">No. HP </label>
                                    <input id="mobile" type="text" class="form-control" name="mobile" required=""/>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="place_birth">Tempat Lahir </label>
                                        <input id="place_birth" type="text" class="form-control" name="place_birth" required=""/>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="date_birth">Tanggal Lahir </label>
                                        <input id="date_birth" type="text" class="form-control" name="date_birth" required=""/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="street">Alamat </label>
                                    <input id="street" type="text" class="form-control" name="street" required="" placeholder="Jalan"/>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="city">Kota </label>
                                        <div class="col-sm">
                                            <select name="city_id" class="form-control">
                                                <option>---Pilih Kota---</option>
                                                <t t-foreach="request.env['res.state.city'].sudo().search([])" t-as="city">
                                                    <option t-att-value="city.id">
                                                        <t t-esc="city.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="state_id">Provinsi </label>
                                        <div class="col-sm">
                                            <select name="state_id" class="form-control">
                                                <option>---Pilih Provinsi---</option>
                                                <t t-foreach="request.env['res.country.state'].sudo().search([])" t-as="state">
                                                    <option t-att-value="state.id">
                                                        <t t-esc="state.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="country_id">Negara </label>
                                        <div class="col-sm">
                                            <select name="country_id" class="form-control">
                                                <option>---Pilih Negara---</option>
                                                <t t-foreach="request.env['res.country'].sudo().search([])" t-as="country">
                                                    <option t-att-value="country.id">
                                                        <t t-esc="country.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <script type="text/javascript" src="/ff_travel_umroh/static/src/js/domain_country.js"/>
                                </div>
                                <div class="form-group">
                                    <label for="gender">Jenis Kelamin </label>
                                    <div class="col-sm">
                                        <select name="gender" class="form-control">
                                            <option>---Pilih Jenis Kelamin---</option>
                                            <t t-foreach="gender" t-as="gen">
                                                <option t-att-value="gen[0]">
                                                    <t t-esc="gen[1]"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="blood_type">Golongan Darah </label>
                                    <select name="blood_type" class="form-control">
                                        <option>---Pilih Golongan Darah---</option>
                                        <t t-foreach="blood_type" t-as="type">
                                            <option t-att-value="type[0]">
                                                <t t-esc="type[1]"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="education">Pendidikan </label>
                                    <select name="education" class="form-control">
                                        <option>---Pilih Pendidikan Terakhir---</option>
                                        <t t-foreach="education" t-as="edu">
                                            <option t-att-value="edu[0]">
                                                <t t-esc="edu[1]"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <!-- <br/>
                                <button class="btn btn-primary btn-lg" type="submit">Next</button>
                                <br/> -->
                            </form>
                        </div>
                    </section>
                </div>
                <div id="pendaftaran_data_tambahan">
                    <section class="s_website_form">
                        <div class="container col-md-8">
                            <form id="pendaftaran_jamaah_form" action="/pendaftaran/data-passport" method="post" class="o_mark_required" enctype="multipart/form-data" data-model_name="res.partner" data-success-mode="redirect">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="father_name">Nama Bapak </label>
                                        <input id="father_name" type="text" class="form-control" name="father_name" required=""/>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="mother_name">Nama Ibu </label>
                                        <input id="mother_name" type="text" class="form-control" name="mother_name" required=""/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="job">Pekerjaan </label>
                                    <input id="job" type="text" class="form-control" name="job" required=""/>
                                </div>
                                <div class="form-group">
                                    <label for="marital_status">Status Pernikahan </label>
                                    <select name="marital_status" class="form-control">
                                        <option>---Pilih Status Pernikahan---</option>
                                        <t t-foreach="marital_status" t-as="status">
                                            <option t-att-value="status[0]">
                                                <t t-esc="status[1]"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="clothes_size">Ukuran Baju </label>
                                    <select name="clothes_size" class="form-control">
                                        <option>---Pilih ukuran_baju---</option>
                                        <t t-foreach="clothes_size" t-as="size">
                                            <option t-att-value="size[0]">
                                                <t t-esc="size[1]"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <br/>
                                <button class="btn btn-primary btn-lg" type="submit">Next</button>
                                <br/>
                            </form>
                        </div>
                    </section>
                </div>
                <div class="oe_structure mt-2"/>
            </div>
        </t>
    </template>

    <template id="pendaftaran_data_passport" name="Data-Passport">
        <t t-call="website.layout">
            <section class="s_website_form">
                <div class="container col-md-8">
                    <form id="pendaftaran_jamaah_form" method="post" class="o_mark_required" enctype="multipart/form-data" data-model_name="res.partner" data-success-mode="redirect">
                        <div class="form-group">
                            <label for="pass_name">Nama </label>
                            <input id="pass_name" type="text" class="form-control" name="pass_name" required=""/>
                        </div>
                        <div class="form-group">
                            <label for="pass_no">No. Pasport </label>
                            <input id="pass_no" type="text" class="form-control" name="pass_no" required=""/>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="date_exp">Tanggal Habis Berlaku </label>
                                <input id="date_exp" type="text" class="form-control" name="date_exp" required=""/>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="date_isue">Tanggal Terbit </label>
                                <input id="date_isue" type="text" class="form-control" name="date_isue" required=""/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="imigrasi">Imigrasi </label>
                            <input id="imigrasi" type="text" class="form-control" name="imigrasi" required=""/>
                        </div>
                        <br/>
                        <button class="btn btn-primary btn-lg" type="submit">Next</button>
                        <br/>
                    </form>
                </div>
            </section>
        </t>
    </template>

    <template id="pendaftaran_data_gambar" name="Data-Gambar">
        <t t-call="website.layout">
            <section class="s_website_form">
                <div class="container col-md-8">
                    <form id="pendaftaran_jamaah_form" action="/pendaftaran/data-gambar" method="post" class="o_mark_required" enctype="multipart/form-data" data-model_name="res.partner" data-success-mode="redirect">
                        <div class="form-group">
                            <label for="pass_img">Pasport </label>
                            <input id="pass_img" type="text" class="form-control" name="pass_img" required=""/>
                        </div>
                        <div class="form-group">
                            <label for="kk_img">Kartu Keluarga </label>
                            <input id="kk_img" type="text" class="form-control" name="kk_img" required=""/>
                        </div>
                        <div class="form-group">
                            <label for="doc_img">Buku Nikah / Akte Kelahiran </label>
                            <input id="doc_img" type="text" class="form-control" name="doc_img" required=""/>
                        </div>
                        <div class="form-group">
                            <label for="ktp_img">KTP </label>
                            <input id="ktp_img" type="text" class="form-control" name="ktp_img" required=""/>
                        </div>
                        <br/>
                        <div>
                            <button class="btn btn-primary btn-lg" type="action">Submit</button>
                        </div>
                        <br/>
                    </form>
                </div>
            </section>
        </t>
    </template>

</odoo>
