<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_umroh_view_form" model="ir.ui.view">
        <field name="name">product.template.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="package_ok"/>
                    <label for="package_ok"/>
                </div>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="packages_list" string="Packages">
                    <field name="package_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="departure_date"/>
                            <field name="return_date"/>
                            <field name="quota_progress" widget="progressbar"/>
                            <field name="subtotal"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
