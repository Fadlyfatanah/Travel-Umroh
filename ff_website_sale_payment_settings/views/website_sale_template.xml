<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="payment" inherit_id="website_sale.payment">
        <xpath expr="//div[hasclass('js_payment')]" position="after">
            <div class="float-left mt-2" t-if="not website.website_sale_payment">
                <a role="button" href="/shop/cart" class="btn btn-secondary">
                    <i class="fa fa-chevron-left" />
                    Return to Cart
                </a>
            </div>
            <div
                class="js_skip_payment mt-3"
                t-if="not website.website_sale_payment"
                id="skip_payment_method"
            >
                <form
                    target="_self"
                    action="/shop/confirmation"
                    method="post"
                    class="float-right"
                >
                    <input
                        type="hidden"
                        name="csrf_token"
                        t-att-value="request.csrf_token()"
                    />
                    <a role="button" class="btn btn-primary a-submit" href="#">
                        <span>Confirm <span class="fa fa-chevron-right" /></span>
                    </a>
                </form>
            </div>
        </xpath>
        <xpath expr="//div[@id='payment_method']" position="attributes">
            <attribute
                name="t-if"
            >(acquirers or tokens) and website_sale_order.amount_total and website.website_sale_payment</attribute>
        </xpath>
        <xpath expr="//div[hasclass('js_payment')]" position="attributes">
            <attribute
                name="t-if"
            >not website_sale_order.amount_total and website.website_sale_payment</attribute>
        </xpath>
    </template>
    <template id="confirmation" inherit_id="website_sale.confirmation">
        <xpath
            expr='//t[@t-if="payment_tx_id.state == &apos;done&apos;"]'
            position="attributes"
        >
            <attribute
                name="t-if"
            >payment_tx_id.state == 'done' or (not website.website_sale_payment and order.state == 'sale')</attribute>
        </xpath>
        <!-- Hide payment related info if skip payment step -->
        <xpath
            expr="//t[@t-call='website_sale.payment_confirmation_status']"
            position="attributes"
        >
            <attribute name="t-if">website.website_sale_payment</attribute>
        </xpath>
    </template>
    <template id="order_state_message">
        <p>Your order is waiting manual confirmation.</p>
        <br />
    </template>
    <template id="cart" inherit_id="website_sale.cart">
        <xpath expr="//div[hasclass('oe_cart')]/div/div/a[2]/span[1]" position="attributes">
            <attribute name="t-if">website.website_sale_payment</attribute>
        </xpath>
        <xpath expr="//div[hasclass('oe_cart')]/div/div/a[2]/span[1]" position="after">
            <span t-if="not website.website_sale_payment">Confirm</span>
        </xpath>
        <xpath expr="//div[@id='o_cart_summary']/div/a[2]/span[1]" position="attributes">
            <attribute name="t-if">website.website_sale_payment</attribute>
        </xpath>
        <xpath expr="//div[@id='o_cart_summary']/div/a[2]/span[1]" position="after">
            <span t-if="not website.website_sale_payment">Confirm</span>
        </xpath>
    </template>
    <template id="short_cart_summary" inherit_id="website_sale.short_cart_summary">
        <xpath expr="//a[1]/span" position="attributes">
            <attribute name="t-if">website.website_sale_payment</attribute>
        </xpath>
        <xpath expr="//a[1]/span" position="after">
            <span t-if="not website.website_sale_payment">Confirm <span class="fa fa-chevron-right"/></span>
        </xpath>
    </template>
</odoo>
