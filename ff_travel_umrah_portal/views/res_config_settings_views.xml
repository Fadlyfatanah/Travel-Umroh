<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='seo_settings']" position="after">
                <h2>Contact Payment Information</h2>
                <div class="row mt16 o_settings_container" id="seo_settings">
                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box" id="contact_name_payment_info_setting">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="contact_name_payment_info" />
                            <div class="text-muted">
                                Contact Name for Payment Information
                            </div>
                            <field name="contact_name_payment_info" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box" id="contact_media_payment_info_setting">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="contact_media_payment_info" />
                            <div class="text-muted">
                                Media to Use for Payment Information
                            </div>
                            <field name="contact_media_payment_info" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box" id="contact_payment_info_setting">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="contact_payment_info" />
                            <div class="text-muted">
                                Contact for Payment Information
                            </div>
                            <field name="contact_payment_info" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>